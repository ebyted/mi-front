# Configuración de Deploy para Sancho Distribuidora
# Este archivo define variables para deploys consistentes

# Información del proyecto
PROJECT_NAME=sancho-distribuidora
VERSION=v2
DOMAIN=www.sanchodistribuidora.com

# Configuración de base de datos
POSTGRES_DB=maestro_inventario
POSTGRES_USER=maestro
POSTGRES_PASSWORD=maestro

# Configuración de SSL
ACME_EMAIL=admin@sanchodistribuidora.com

# Configuración de puertos (para fallback)
HTTP_PORT=80
HTTPS_PORT=443
DASHBOARD_PORT=8080

# Configuración de red
NETWORK_NAME=sancho_network

# Configuración de volúmenes
POSTGRES_VOLUME=sancho_postgres_data
LETSENCRYPT_VOLUME=sancho_letsencrypt

# Configuración de build
BUILD_NO_CACHE=true
REMOVE_ORPHANS=true

# Configuración de logs
LOG_LEVEL=INFO
ENABLE_ACCESS_LOG=true

# Timeouts
DB_WAIT_TIMEOUT=60
BACKEND_WAIT_TIMEOUT=90
FRONTEND_WAIT_TIMEOUT=30

# Configuración de salud
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s
