# DATABASE_PORT=3306

# Configuración de Respaldos
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=/opt/backups/maestro_inventario

# Configuración de Notificaciones (opcional)
NOTIFICATION_EMAIL=admin@tu-dominio.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu_app_password

# Configuración de Almacenamiento en la Nube (opcional)
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=maestro-inventario-backups
AWS_REGION=us-east-1

# Google Drive (opcional)
GDRIVE_CREDENTIALS_FILE=/opt/maestro_inventario/gdrive_credentials.json
GDRIVE_FOLDER_ID=tu_folder_id_aqui
